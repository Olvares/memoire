%---------------------------------------------
%					SECTION
%---------------------------------------------
%--------- NUMBERED -------------
\titleformat
	{\section}
	[block]
	{\Large\sf\bfseries}
	{\Large\thesection.}
	{0.5\baselineskip}% En block, c'est un espace horizontal
	{#1}
	%[]
%--------- UNNUMBERED -----------
\titleformat
	{name = \section, numberless}
	[block]
	{\Large\sf\bfseries}
	{}
	{0pt}% En block, c'est un espace horizontal
	{#1}
	[\addcontentsline{toc}{section}{#1}]
%--------- SPACES -------------
\titlespacing*
	{\section} % command
	{0pt} % left
	{0.5\baselineskip} % before-sep
	{0pt}% after-sep

%------------ IN TOC -----------
\titlecontents
	{section} % section
	[\isec@sp] % left
	{\addvspace{0pt}\filright} % above-code
	{%\bf % numbered-entry-format
		\contentslabel[%
			%\textcolor{blue}%
			{\thecontentslabel~}%
		]%
		{\sec@sp}% Position vers la gauche des numeros par rapport aux titres
	}%
	{%\bf  % numberless-entry-format
		\hspace{-\sec@sp}
	}
	{%\bf\textcolor{blue}{
		\dotfill\contentspage}%} % filler-page-format
	[\addvspace{0pt}] % below-code
%====================================================


%---------------------------------------------
%					SUB-SECTION
%---------------------------------------------
%--------- NUMBERED -------------
\titleformat
	{\subsection}
	[block]
	{\large\sf\bfseries}
	{\large\thesubsection.}
	{0.5\baselineskip}% En block, c'est un espace horizontal
